<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} %highlight{${LOG_LEVEL_PATTERN:-%5p}}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=green,
            DEBUG=green bold, TRACE=blue} %style{${sys:PID}}{magenta} [%20.20t] %style{%-25.25C{1}}{cyan} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"
                           disableAnsi="false"/>
        </Console>
        <File name="LogToFile" fileName="logs/client.log">
            <PatternLayout>
                <Pattern>%d [%p] [%t] %c{1} â€“ %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="ru.sapozhnikov.sensorschecker.client.sensor" level="info" additivity="false">
            <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>
</Configuration>